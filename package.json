{
  "name": "@trohde/bcm-cli",
  "version": "1.0.8",
  "description": "Agent-first CLI for rendering Business Capability Maps from JSON to SVG, HTML, PNG, and PDF",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "bcm": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "bump:badge": "node -e \"const fs=require('fs');const v=require('./package.json').version;const r=fs.readFileSync('README.md','utf8');fs.writeFileSync('README.md',r.replace(/version-[^-]+-blue/,'version-'+v+'-blue'));\"",
    "bump:patch": "npm version patch --no-git-tag-version && pnpm run bump:badge && pnpm build",
    "bump:minor": "npm version minor --no-git-tag-version && pnpm run bump:badge && pnpm build",
    "bump:major": "npm version major --no-git-tag-version && pnpm run bump:badge && pnpm build"
  },
  "keywords": [
    "business-capability-map",
    "capability-map",
    "bcm",
    "enterprise-architecture",
    "svg",
    "visualization",
    "cli",
    "archimate",
    "togaf"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThomasRohde/bcm-cli.git"
  },
  "homepage": "https://github.com/ThomasRohde/bcm-cli#readme",
  "bugs": {
    "url": "https://github.com/ThomasRohde/bcm-cli/issues"
  },
  "author": "Thomas Klok Rohde",
  "dependencies": {
    "marked": "^17.0.1",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@types/opentype.js": "^1.3.8",
    "@types/sanitize-html": "^2.16.0",
    "commander": "^13.1.0",
    "opentype.js": "^1.3.4",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "playwright": "^1.50.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT"
}
